bindsym $win+Shift+r restart
# exit i3 (logs you out of your X session)
#bindsym $win+Shift+Return exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"
bindsym $win+Shift+Return exit i3

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $win+r mode "default"
}

bindsym $win+r mode "resize"

mode "softwares" {
     bindsym Shift+t exec ~/.Telegram/Telegram
     bindsym f exec firefox
     bindsym Shift+f exec franz
     bindsym g exec google-chrome
     bindsym i exec google-chrome --incognito
     bindsym e exec emacs
     bindsym $win+d mode "default"
     bindsym n exec gnome-control-center wifi
     bindsym x exec nautilus
     bindsym s exec spotify
}
bindsym $win+d mode "softwares"; exec notify-send "Softwares" "g: chrome \nT: telegram \ni:chrome incognito\ne: emacs \ns: spotify \nf: firefox \nx: nautilus \nn: network \n\n win+d: sair"

mode "scripts" {
     bindsym a exec ~/.sh/autotelas.sh
     bindsym g exec ~/.git.sh
     bindsym Return mode "default"
}
bindsym $win+k mode "scripts"; exec notify-send "Scripts" "a: autotelas \ng: git push \nenter: sair"

mode "kill_scripts" {
     bindsym a exec killall -015 autotelas.sh
     bindsym Return mode "default"
}
bindsym $win+Shift+k mode "kill_scripts"

mode block {
     bindsym $win+Control+Shift+v exec gnome-terminal
}
bindsym $win+Shift+b workspace 665; workspace 666; exec ~/.sh/blockmode.sh

